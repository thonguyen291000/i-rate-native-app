<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".DetailsActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Restaurant name*: "
                android:id="@+id/txtNameDetail"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:id="@+id/edtNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtNameDetail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:maxLength="30"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Restaurant type*:   "
                android:textColor="#000000"
                android:id="@+id/txtTypeDetail"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:id="@+id/edtTypeDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtTypeDetail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:maxLength="50"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Visited date*:         "
                android:textColor="#000000"
                android:id="@+id/txtVisitDateDetail"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:id="@+id/edtVisitDateDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_toRightOf="@+id/txtVisitDateDetail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:maxLength="10"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDatePickerDetail"
                android:layout_toRightOf="@+id/edtVisitDateDetail"
                android:src="@drawable/ic_baseline_calendar_today_24"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Personal price*:     "
                android:textColor="#000000"
                android:id="@+id/txtPriceDetail"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:id="@+id/edtPriceDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_toRightOf="@+id/txtPriceDetail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:maxLength="6"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Location:                  "
                android:textColor="#000000"
                android:id="@+id/txtLocationDetail"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:id="@+id/edtLocationDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtLocationDetail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:maxLength="50"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. Reporter name*:     "
                android:textColor="#000000"
                android:id="@+id/txtReporterDetail"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:id="@+id/edtReporterDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_toRightOf="@+id/txtReporterDetail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:maxLength="30"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Created date*:         "
                android:id="@+id/txtDateDetail"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <EditText
                android:id="@+id/edtDateDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtDateDetail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:maxLength="10"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8. Notes:                       "
                android:id="@+id/txtNotesDetail"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/edtNotesDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtNotesDetail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorNote"
                android:maxLength="100"/>

        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edtVisitDate"
            android:layout_marginTop="10dp"
            android:background="#a6afbd"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9. Service rating: Need to improve"
                android:textColor="#000000"
                android:id="@+id/txtServiceRatingDetail"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="2.5"
                android:layout_below="@+id/txtServiceRatingDetail"
                android:id="@+id/serviceRatingDetail"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10. Cleanliness rating: Need to improve"
                android:textColor="#000000"
                android:id="@+id/txtCleanlinessRatingDetail"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="2.5"
                android:layout_below="@+id/txtCleanlinessRatingDetail"
                android:id="@+id/cleanlinessRatingDetail"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11. Food rating: Need to improve"
                android:textColor="#000000"
                android:id="@+id/txtFoodRatingDetail"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="2.5"
                android:layout_below="@+id/txtFoodRatingDetail"
                android:id="@+id/foodRatingDetail"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12. Total rating: Need to improve"
                android:textColor="#000000"
                android:id="@+id/txtTotalRating"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="2.5"
                android:layout_below="@+id/txtTotalRating"
                android:id="@+id/totalRating"/>

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edtVisitDate"
            android:layout_marginTop="10dp"
            android:background="#a6afbd"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13. Restaurant image:"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Update" />

            <ImageView
                android:id="@+id/imgRestaurant"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_cloud_upload_24"
                android:onClick="uploadImgRestaurant"
                android:pointerIcon="hand"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_below="@+id/imgRestaurant"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>